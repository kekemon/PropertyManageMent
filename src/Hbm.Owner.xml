<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Owner" table = "Owner">
      
      <meta attribute = "class-description">
         This class contains the Owner detail. 
      </meta>
      
      <id name = "id" type = "int" column = "idOwner">
         <generator class="native"/>
      </id>
      
      <property name = "name" column = "OwnerName" type = "string"/>
      <property name = "mobileNumber" column = "OwnerMobile" type = "string"/>
      <property name = "address" column = "OwnerAddress" type = "string"/>
      
   </class>
</hibernate-mapping>