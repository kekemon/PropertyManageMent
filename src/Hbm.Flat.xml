<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="Flat" table="Flat">

		<meta attribute="class-description">
			This class contains the Flat detail.
		</meta>

		<id name="id" type="int" column="idFlat">
			<generator class="native" />
		</id>

		<property name="number" column="FlatNumber" type="string" />

		<set name="owners" cascade="all" table="Flat_Owner_Map">
			<key column="idFlat" />
			<many-to-many column="idOwner" class="Owner" />
		</set>
		<set name="images" cascade="all" table="Flat_Image_Map">
			<key column="idFlat" />
			<many-to-many column="idImage" class="Image" />
		</set>
		<set name="videos" cascade="all" table="Flat_Video_Map">
			<key column="idFlat" />
			<many-to-many column="idVideo" class="Video" />
		</set>
	</class>
</hibernate-mapping>